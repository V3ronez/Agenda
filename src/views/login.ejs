<%- include('includes/head')%>
  <%- include('includes/nav')%>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Criar conta ou Entrar</h1>
          <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
          <%- include('includes/posts');%>
            <div class="row">
              <div class="col-lg">
                <h4 class="text-center">Faça seu cadastro</h4>
                <p class="text-success my-3">Ainda não tem conta? Crie agora mesmo com apenas alguns cliques!</p>
                <form class="form-cadastro" action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="mb-3">
                    <label>Email</label>
                    <input type="email" placeholder="exemplo@exemplo.com" class="form-control" name="email">
                    <div id="emailHelp" class="form-text">Seu email está 100% seguro.</div>
                  </div>
                  <div class="mb-3">
                    <label>Senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>
                  <button type="submit" class="btn btn-primary">Criar minha conta</button>
                </form>
              </div>
              <div class="col-lg">
                <h4 class="text-center">Fazer login</h4>
                <p class="text-center my-3">Se você ja cadastro, faça o login abaixo</p>
                <form class="form-login" action="/login/login" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="mb-3">
                    <label>Email</label>
                    <input type="email" placeholder="exemplo@exemplo.com" class="form-control" name="email">
                  </div>
                  <div class="mb-3">
                    <label>Senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>
                  <button type="submit" class="btn btn-primary">Entrar</button>
                </form>
              </div>
            </div>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>
    <%- include('includes/footer')%>