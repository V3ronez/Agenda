<% if (errors.length > 0) { %>
    <div class="row">
        <div class="col my-3">
            <div class="text-center fs-5 rounded alert-danger">
                <% errors.forEach(erro => {%>
                    <%= erro %><br>
                <% }); %>
            </div>
        </div>
    </div>
    <% } %>

    <% if (success.length > 0) { %>
        <div class="row">
            <div class="col my-3">
                <div class="text-center fs-5 rounded alert-success">
                    <% success.forEach(erro => {%>
                        <%= success %><br>
                    <% }); %>
                </div>
            </div>
        </div>
        <% } %>